.personalContainer {
  width: 100%;
  height: 100%;
}

/* usermessage */
.personalContainer .userInfoSelection {
  height: 520rpx;
  padding: 100rpx 30rpx 0;
  position: relative;
}

.userInfoSelection .bd {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0.7;
  /* 高斯模糊 */
  filter: blur(1px);
}

/* 头像和昵称 */
.userInfoBox {
  height: 180rpx;
  display: flex;
  position: relative;
  text-align: center;
  /* align-items 属性定义flex子项在flex容器的当前行的侧轴（纵轴）方向上的对齐方式。 */
  align-items: center;
  z-index: 1;
}

.userInfoBox .avatar {
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}

.userInfoBox text {
  font-size: 46rpx;
  padding-left: 50rpx;
}

/* vipCard */
.userInfoSelection .vipCard {
  height: 240rpx;
  position: relative;
  background: rgba(0, 0, 0, .7);
  background: linear-gradient(left, red, black);
  display: flex;
  flex-direction: column;
  color: #f7d680;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 24rpx;
  z-index: 1;
}
.vipCard .bd {
  position:absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.vipCard .title{
  margin-top: 5rpx;
  font-size: 24rpx;
}
.vipCard .iconfont {
  font-size:24rpx ;
}
.vipCard .title text{
  margin-right: 10rpx;
}
.vipCard .b_button{
  float: right;
  width: 132rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #f9e6af;
  color: #36343c;
  text-align: center;
  line-height: 40rpx;
}
.vipCard .nameContent{
  margin-top: 50rpx;
  font-size: 32rpx;
}
.vipCard .explain{
  margin-top: 10rpx;
  font-size: 28rpx;
}
/* 下半 */
.coverSelection{
  margin-top: -150rpx;
  padding: 0 30rpx;
  position:relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
  z-index: 2;
}
.coverSelection .arc{
  position: absolute;
  left: 0;
  top:-34rpx;
  width: 100%;
  height: 36rpx;
}
.navSelection{
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  border-radius: 20rpx;
}
.navSelection .navItem {
  width: 25%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navItem .iconfont{
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}
.navItem text{
  font-size: 22rpx;
}

/* 个人中心列表 */
.personalContent{
  background-color: #fff;
  margin-top: 20rpx;
}
.recentPlayContainer .title{
  font-size: 32rpx;
  padding-left: 16rpx;
  color: #333;
  line-height: 80rpx;
}
.personalContent .recentPlay{
  display: flex;
  height: 160rpx;
  
}
.scrollItem image{
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
}
/* 列表 */
.cardList{
  margin-top: 10rpx;
}
.cardList .cardItem{
  border-top: 1rpx solid #ccc;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
}

.cardItem .more{
  float: right;
}