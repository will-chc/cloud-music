<view class="personalContainer">
  <!-- 上半 -->
  <view class="userInfoSelection">
    <image class="bd" src="/static/image/ipad.jpg"></image>
    <view class="userInfoBox">
      <image class="avatar" src="/static/image/8chong.jpg"></image>
      <text class="nickName">123</text>
    </view>
    <view class="vipCard">
      <image class="bd" src="/static/image/vip-card-bg.png"></image>
      <view class="title">
        <text class="iconfont icon-huiyuan"></text>
        <text>云音乐会员</text>
        <view class="b_button">开通会员</view>
      </view>
      <view class="nameContent">云村黑胶会员</view>
      <view class="explain">VIP歌曲畅享,尊享主题</view>
    </view>
  </view>
  <!-- 下半 -->
  <view class="coverSelection"
      bindtouchstart="handleTouchStart"
      bindtouchmove="handleTouchMove"
      bindtouchend="handleTouchEnd"
      style="transform: {{coverTransform}}; transition: {{coverTransition}}"
  >
    <image class="arc" src="/static/image/arc.png"></image>
    <!-- 个人中心导航 -->
    <view class="navSelection">
      <view class="navItem">
        <text class="iconfont icon-xiaoxi"></text>
        <text>我的消息</text>
      </view>
      <view class="navItem">
        <text class="iconfont icon-haoyou"></text>
        <text>我的好友</text>
      </view>
      <view class="navItem">
        <text class="iconfont icon-geren"></text>
        <text>个人主页</text>
      </view>
      <view class="navItem">
        <text class="iconfont icon-gexingzhuangban"></text>
        <text>个性装扮</text>
      </view>
    </view>
    <!-- 个人中心列表 -->
    <view class="personalContent">
      <view class="recentPlayContainer">
        <text class="title">最近播放</text>
        <!-- 最近播放记录 -->
        <scroll-view class="recentPlay" enable-flex scroll-x>
          <view class="scrollItem">
            <image src="/static/image/8chong.jpg"></image>
          </view>
          <view class="scrollItem">
            <image src="/static/image/8chong.jpg"></image>
          </view>
          <view class="scrollItem">
            <image src="/static/image/8chong.jpg"></image>
          </view>
          <view class="scrollItem">
            <image src="/static/image/8chong.jpg"></image>
          </view>
          <view class="scrollItem">
            <image src="/static/image/8chong.jpg"></image>
          </view>
        </scroll-view>
      </view>
      <view class="cardList">
        <view class="cardItem">
          <text class="title">我的音乐</text>
          <text class="more"> > </text>
        </view>
        <view class="cardItem">
          <text class="title">我的收藏</text>
          <text class="more"> > </text>
        </view>
        <view class="cardItem">
          <text class="title">我的电台</text>
          <text class="more"> > </text>
        </view>
        
      </view>
    </view>

  </view>
</view>