/* pages/login/login.wxss */
.wrapper{
  margin-top: 40rpx;
  position: relative;
  width: 100%;
  z-index: 999;
}
.wrapper .sign{
  font-size: 120rpx;
  color: #f8f8f8;
  position:relative;
  left: -16rpx;
}
.wrapper .welcome{
  position: relative;
  left: 50rpx;
  top:-90rpx;
  font-size: 46rpx;
  color: #555;
}
.wrapper .inputContainer{
  padding: 0 60rpx;
}
.inputItem{
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  align-items: flex-start;
  justify-content: center;
  padding: 0 30rpx;
  background:#f8f6fc;
  border-radius: 10rpx;
  height: 120rpx;
}
.inputItem .title{
  height: 50rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #606266;
}
.inputItem input{
  height: 60rpx;
  font-size: 30rpx;
  width: 100%;
  color: #303133;
}
.inputItem:last-child{
  margin-bottom: 0;
}
.submit-btn{
  width: 630rpx!important;
  height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #d43c33;
}
.forget-password{
  font-size: 28rpx;
  color: #4399fc;
  margin-top: 40rpx;
  text-align: center;
}
.register-section{
  width: 100%;
  position: absolute;
  left: 0;
  bottom:50rpx;
  font-size: 28rpx;
  color: #606266;
  text-align: center;
}
.register-section text{
  color: #4399fc;
  margin-left: 10rpx;
}